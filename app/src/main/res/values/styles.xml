<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextInputLayout.TextAppearance.HintGray" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/gray100</item>
        <item name="android:textColor">@color/gray200</item>
    </style>

    <style name="TextInputLayout.TextAppearance.ErrorWhite" parent="TextAppearance.Design.Error">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppCompatEditText.TextAppearanceWhite" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray100</item>
    </style>

    <style name="AppCompatEditTextWhite">
        <item name="colorControlNormal">@color/blue300</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textAppearance">@style/AppCompatEditText.TextAppearanceWhite</item>
        <item name="android:textColor">@color/gray100</item>
        <item name="android:textColorHint">@color/gray100</item>
    </style>

    <style name="loading_dialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/animation_open</item>
        <item name="android:windowExitAnimation">@anim/animation_close</item>
    </style>


</resources>

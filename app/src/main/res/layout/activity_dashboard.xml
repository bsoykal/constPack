<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_logo_layout">

    </include>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/dashboard_tabs"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/dashboard_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
       android:layout_above="@+id/bottom_line"
        android:background="@color/white"
        />
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/dashboard_tabs"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/_appimg_qr_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/qr_selected"
            android:scaleType="centerInside"
            android:visibility="invisible"
            tools:visibility="visible"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/_appimg_home_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home_selected"
            android:scaleType="centerInside"
            android:visibility="invisible"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/_appimg_constructor_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/constructor_selected"
            android:scaleType="centerInside"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.constpack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mobile.constpack.ui.activity.SplashController_"
            android:label="@string/app_name"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.mobile.constpack.ui.activity.LoginActivity_"
            android:screenOrientation="userPortrait"/>

        <activity android:name="com.mobile.constpack.ui.activity.DashBoardController_"
            android:screenOrientation="userPortrait"/>

        <activity android:name="com.mobile.constpack.ui.activity.ProjectController_"
            android:screenOrientation="userPortrait"/>

        <activity android:name="com.mobile.constpack.ui.activity.NewsActivity_"
            android:screenOrientation="userPortrait"/>

        <activity android:name="com.mobile.constpack.ui.activity.TaskController_"
            android:screenOrientation="userPortrait"/>

    </application>

</manifest>